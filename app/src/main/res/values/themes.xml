<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Popcorn" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="fontFamily">@font/inter</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.Popcorn" parent="Base.Theme.Popcorn" />

    <style name="Theme.Popcorn.PrimaryButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/red</item>
    </style>

    <style name="Theme.Popcorn.SecondaryButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/black</item>
    </style>
</resources>